<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tubbiz">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="RegÃ­strate ahora"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="30dp"
            android:textColor="#000000" />
      <TableRow >
          <ImageButton
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/loginfacebook"
              android:layout_marginLeft="35dp"
              android:gravity="center"
              android:contentDescription="imagen de facebook"/>
      </TableRow>
        <TableRow>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/google"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:contentDescription="imagen de google"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="10dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="116dp"
            android:orientation="vertical"
            android:layout_height="266dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="150dp"
                android:layout_height="86dp">

                <Button
                    android:id="@+id/btnEntrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20sp"
                    android:textSize="20sp"
                    android:text="ENTRAR"
                    android:onClick="lanzarLogin"/>

                <Button
                    android:id="@+id/btnRegistrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20sp"
                    android:textSize="20sp"
                    android:text="REGISTRAR"
                    android:onClick="lanzarRegistro"/>
            </LinearLayout>

        </LinearLayout>
        
    </TableLayout>

</LinearLayout>
